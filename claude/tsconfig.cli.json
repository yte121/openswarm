{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/cli/simple-cli.ts",
    "src/cli/simple-cli.js",
    "src/cli/index.ts",
    "src/cli/index-remote.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/agents",
    "src/swarm",
    "src/memory",
    "src/terminal"
  ]
}